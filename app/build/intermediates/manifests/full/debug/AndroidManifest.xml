<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.markus.customdictionary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/icon_customdictionary"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.markus.customdictionary.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.markus.customdictionary.AddWordActivity"
            android:label="Add a word"
            android:parentActivityName="com.example.markus.customdictionary.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.markus.customdictionary.Dictionary_use"
            android:label="Search for words"
            android:parentActivityName="com.example.markus.customdictionary.MainActivity" />
        <activity
            android:name="com.example.markus.customdictionary.groupByActivity"
            android:label="Browse words"
            android:parentActivityName="com.example.markus.customdictionary.MainActivity" >
            >
        </activity>
        <activity
            android:name="com.example.markus.customdictionary.Training"
            android:label="Training"
            android:parentActivityName="com.example.markus.customdictionary.MainActivity" />

        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>